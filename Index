    </div>

    <script>
        // Gestione del modal waitlist
        const modal = document.getElementById('waitlist-modal');
        const openModalBtn = document.getElementById('open-modal');
        const closeModalBtn = document.getElementById('close-modal');
        const headerCta = document.getElementById('header-cta');
        const waitlistForm = document.getElementById('waitlist-form');
        const successMessage = document.getElementById('success-message');
        const unifiedCtaButton = document.getElementById('unified-cta-button');
        const footerCtaButton = document.getElementById('footer-cta-button');
        
        // Apri il modal waitlist
        function openModal() {
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }
        
        // Chiudi il modal waitlist
        function closeModal() {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
        
        // Apri modal al click sui pulsanti
        openModalBtn.addEventListener('click', openModal);
        headerCta.addEventListener('click', function(e) {
            e.preventDefault();
            openModal();
        });
        
        // Apri modal per il CTA unificato
        unifiedCtaButton.addEventListener('click', openModal);
        
        // Apri modal per il CTA footer
        footerCtaButton.addEventListener('click', function(e) {
            e.preventDefault();
            openModal();
        });
        
        // Chiudi modal
        closeModalBtn.addEventListener('click', closeModal);
        
        // Chiudi modal cliccando fuori dal contenuto
        window.addEventListener('click', function(e) {
            if (e.target === modal) {
                closeModal();
            }
        });
        
        // Gestione del form waitlist
        waitlistForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simulazione invio form
            const formData = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                role: document.getElementById('role').value
            };
            
            console.log('Dati inviati:', formData);
            
            // Nascondi il form e mostra messaggio di successo
            waitlistForm.style.display = 'none';
            successMessage.style.display = 'block';
            
            // Chiudi il modal dopo 3 secondi
            setTimeout(() => {
                closeModal();
                waitlistForm.style.display = 'block';
                successMessage.style.display = 'none';
                waitlistForm.reset();
            }, 3000);
        });

        // Gestione FAQ - apertura/chiusura domande
        const faqItems = document.querySelectorAll('.faq-item');
        
        faqItems.forEach(item => {
            const question = item.querySelector('.faq-question');
            
            question.addEventListener('click', () => {
                // Chiudi tutte le altre FAQ
                faqItems.forEach(otherItem => {
                    if (otherItem !== item) {
                        otherItem.classList.remove('active');
                    }
                });
                
                // Apri/chiudi la FAQ corrente
                item.classList.toggle('active');
            });
        });

        // Carousel functionality
        const track = document.getElementById('testimonials-track');
        const cards = document.querySelectorAll('.testimonial-card');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const dotsContainer = document.getElementById('carousel-dots');
        
        let currentIndex = 0;
        const cardCount = cards.length;
        let cardsPerView = 3;
        
        // Update cards per view based on screen size
        function updateCardsPerView() {
            if (window.innerWidth <= 768) {
                cardsPerView = 1;
            } else if (window.innerWidth <= 1024) {
                cardsPerView = 2;
            } else {
                cardsPerView = 3;
            }
            updateCarousel();
        }
        
        // Create dots for carousel
        function createDots() {
            dotsContainer.innerHTML = '';
            const dotCount = Math.ceil(cardCount / cardsPerView);
            
            for (let i = 0; i < dotCount; i++) {
                const dot = document.createElement('div');
                dot.classList.add('carousel-dot');
                if (i === 0) dot.classList.add('active');
                
                dot.addEventListener('click', () => {
                    goToSlide(i);
                });
                
                dotsContainer.appendChild(dot);
            }
        }
        
        // Update carousel position
        function updateCarousel() {
            const cardWidth = cards[0].offsetWidth + 30; // width + gap
            const translateX = -currentIndex * cardWidth * cardsPerView;
            track.style.transform = `translateX(${translateX}px)`;
            
            // Update dots
            const dots = document.querySelectorAll('.carousel-dot');
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === Math.floor(currentIndex / cardsPerView));
            });
        }
        
        // Go to specific slide
        function goToSlide(index) {
            currentIndex = index * cardsPerView;
            updateCarousel();
        }
        
        // Next slide
        function nextSlide() {
            if (currentIndex < cardCount - cardsPerView) {
                currentIndex += cardsPerView;
            } else {
                currentIndex = 0;
            }
            updateCarousel();
        }
        
        // Previous slide
        function prevSlide() {
            if (currentIndex > 0) {
                currentIndex -= cardsPerView;
            } else {
                currentIndex = Math.floor((cardCount - 1) / cardsPerView) * cardsPerView;
            }
            updateCarousel();
        }
        
        // Auto slide every 5 seconds
        let autoSlideInterval = setInterval(nextSlide, 5000);
        
        // Reset auto slide interval on interaction
        function resetAutoSlide() {
            clearInterval(autoSlideInterval);
            autoSlideInterval = setInterval(nextSlide, 5000);
        }
        
        // Event listeners
        prevBtn.addEventListener('click', () => {
            prevSlide();
            resetAutoSlide();
        });
        
        nextBtn.addEventListener('click', () => {
            nextSlide();
            resetAutoSlide();
        });
        
        // Initialize carousel
        window.addEventListener('resize', () => {
            updateCardsPerView();
            createDots();
        });
        
        // Initial setup
        updateCardsPerView();
        createDots();
        
        // Pause auto slide on hover
        track.addEventListener('mouseenter', () => {
            clearInterval(autoSlideInterval);
        });
        
        track.addEventListener('mouseleave', () => {
            resetAutoSlide();
        });

        // Gestione modals per Privacy, Terms e Contacts
        const privacyModal = document.getElementById('privacy-modal');
        const termsModal = document.getElementById('terms-modal');
        const contactsModal = document.getElementById('contacts-modal');
        
        const privacyLink = document.getElementById('privacy-link');
        const termsLink = document.getElementById('terms-link');
        const contactsLink = document.getElementById('contacts-link');
        
        const closePrivacyModal = document.getElementById('close-privacy-modal');
        const closeTermsModal = document.getElementById('close-terms-modal');
        const closeContactsModal = document.getElementById('close-contacts-modal');
        
        // Apri modals
        privacyLink.addEventListener('click', function(e) {
            e.preventDefault();
            privacyModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        });
        
        termsLink.addEventListener('click', function(e) {
            e.preventDefault();
            termsModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        });
        
        contactsLink.addEventListener('click', function(e) {
            e.preventDefault();
            contactsModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        });
        
        // Chiudi modals
        closePrivacyModal.addEventListener('click', function() {
            privacyModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });
        
        closeTermsModal.addEventListener('click', function() {
            termsModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });
        
        closeContactsModal.addEventListener('click', function() {
            contactsModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });
        
        // Chiudi modals cliccando fuori
        window.addEventListener('click', function(e) {
            if (e.target === privacyModal) {
                privacyModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
            if (e.target === termsModal) {
                termsModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
            if (e.target === contactsModal) {
                contactsModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });
    </script>
</body>
</html>
